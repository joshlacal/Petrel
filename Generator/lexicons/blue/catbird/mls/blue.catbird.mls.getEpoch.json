{
  "lexicon": 1,
  "id": "blue.catbird.mls.getEpoch",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get the current epoch for an MLS conversation",
      "parameters": {
        "type": "params",
        "required": ["convoId"],
        "properties": {
          "convoId": {
            "type": "string",
            "description": "Conversation identifier"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "currentEpoch"],
          "properties": {
            "convoId": {
              "type": "string",
              "description": "Conversation identifier"
            },
            "currentEpoch": {
              "type": "integer",
              "minimum": 0,
              "description": "Current MLS epoch number"
            }
          }
        }
      },
      "errors": [
        {
          "name": "ConvoNotFound",
          "description": "Conversation not found"
        },
        {
          "name": "NotMember",
          "description": "Caller is not a member of the conversation"
        }
      ]
    }
  }
}
