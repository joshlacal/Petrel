{
  "lexicon": 1,
  "id": "blue.catbird.mls.getMessages",
  "defs": {
    "main": {
      "type": "query",
      "description": "Retrieve messages from an MLS conversation",
      "parameters": {
        "type": "params",
        "required": ["convoId"],
        "properties": {
          "convoId": {
            "type": "string",
            "description": "Conversation identifier"
          },
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50,
            "description": "Maximum number of messages to return"
          },
          "sinceMessage": {
            "type": "string",
            "description": "Message ID to fetch messages after (pagination cursor)"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["messages"],
          "properties": {
            "messages": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "blue.catbird.mls.defs#messageView"
              },
              "description": "List of messages"
            },
            "cursor": {
              "type": "string",
              "description": "Cursor for next page of messages (if more available)"
            }
          }
        }
      },
      "errors": [
        {
          "name": "ConvoNotFound",
          "description": "Conversation not found"
        },
        {
          "name": "NotMember",
          "description": "Caller is not a member of the conversation"
        },
        {
          "name": "InvalidCursor",
          "description": "Pagination cursor is invalid"
        }
      ]
    }
  }
}
