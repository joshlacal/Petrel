{
  "lexicon": 1,
  "id": "blue.catbird.mls.sendMessage",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Send an encrypted message to an MLS conversation",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["convoId", "ciphertext", "epoch", "senderDid"],
          "properties": {
            "convoId": { "type": "string", "description": "Conversation identifier" },
            "ciphertext": {
              "type": "bytes",
              "description": "MLS encrypted message ciphertext bytes",
              "maxLength": 10485760
            },
            "epoch": {
              "type": "integer",
              "minimum": 0,
              "description": "MLS epoch number when message was encrypted"
            },
            "senderDid": {
              "type": "string",
              "format": "did",
              "description": "DID of the message sender"
            },
            "embedType": {
              "type": "string",
              "description": "Optional embed type",
              "maxLength": 256
            },
            "embedUri": {
              "type": "string",
              "format": "uri",
              "description": "Optional embed URI reference"
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["messageId", "receivedAt"],
          "properties": {
            "messageId": { "type": "string", "description": "Created message identifier" },
            "receivedAt": { "type": "string", "format": "datetime", "description": "Server timestamp when message was received" }
          }
        }
      },
      "errors": [
        { "name": "ConvoNotFound", "description": "Conversation not found" },
        { "name": "NotMember", "description": "Caller is not a member of the conversation" },
        { "name": "InvalidAsset", "description": "Payload or attachment pointer is invalid" },
        { "name": "EpochMismatch", "description": "Message epoch does not match current conversation epoch" },
        { "name": "MessageTooLarge", "description": "Message exceeds maximum size policy" }
      ]
    }
  }
}
